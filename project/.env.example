# Kindle Content Server Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=production

# Database Configuration (Cloud SQL)
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
DB_USER=kindle_user
DB_PASS=your-secure-password
DB_NAME=kindle_content_server

# Alternative database URL format
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GCS_BUCKET_NAME=kindle-content-storage

# Server Configuration
PORT=8080
HOST=0.0.0.0
SERVICE_VERSION=1.0.0

# KUAL API Security
SERVER_PASSCODE=your-server-passcode-for-api-access

# CORS Configuration (comma-separated domains)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://localhost:3000

# Email Configuration (for Kindle delivery)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
KINDLE_SEND_TO_EMAIL=your-kindle@kindle.com

# Redis/Caching (optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://